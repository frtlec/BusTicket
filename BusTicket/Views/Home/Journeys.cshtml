@{
    ViewData["Title"] = "Seferler";
}

@model BusTicket.Business.Dtos.GetJourneysResponse

<div class="bg-light">
    <div class="row bg-primary text-light py-3">
        <div class="col-1">
            <button class="btn bg-transparent" id="back">
                <i class="bi bi-arrow-left text-light fs-4"></i>
            </button>
        </div>
        <div class="col-11 text-center">
            @Model.OriginLocation -
            @Model.DestinationLocation
            <br />
           @Model.JourneysDate.ToLongDateString()
        </div>
    </div>
    <div style="background-color:aliceblue;" class="px-4 mt-3  ">
        @foreach (var item in Model.Items)
        {
            <div class="row p-3 border-bottom bg-light my-2 border-radius-10px journeys-item cursor-pointer">
                <div class="col-12  d-flex flex-row align-content-end justify-content-between">
                    <div class="d-flex flex-row align-content-end">
                        <div class="text-center flex-grow-1">
                            <span>KALKIŞ</span>
                            <br />
                            <span>@item.Departure.ToString("hh':'mm")</span>
                        </div>
                        <div class="mx-2">
                            <i class="bi bi-arrow-right text-dark fs-4"></i>
                        </div>
                        <div class="text-center flex-grow-1">
                            <span>KALKIŞ</span>
                            <br />
                            <span>@item.Arrival.ToString("hh':'mm")</span>
                        </div>
                    </div>
                    <div>
                        <div class="alert alert-danger">
                            @item.Price.ToString("F2") @item.Currency
                        </div>
                    </div>
                </div>
                <div class="">
                    <span class="text-muted">@item.Origin - @item.Destination</span>
                </div>
            </div>

        }
    </div>
  
</div>
