@{
    ViewData["Title"] = "Find Bus";
}

<div class="row  py-md-5 px-md-5">
    <div class="col-10">
        <div class="my-4">
            <h4 style="margin-left:35px" class="text-primary">Nereden</h4>
            <div class="input-group mb-3 bg-transparent border-0  ">
                <div class="input-group-prepend border-0">
                    <div class="input-group-text bg-transparent border-0 " id="basic-addon1">
                        <i class="bi bi-geo"></i>
                    </div>
                </div>

                <input type="text" id="startLocation" class="form-control border-top-0 border-start-0 border-end-0 border-bottom-1" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <h4 style="margin-left:35px" class="text-primary">Nereye</h4>
            <div class="input-group mb-3 bg-transparent border-0  ">
                <div class="input-group-prepend border-0">
                    <div class="input-group-text bg-transparent border-0 " id="basic-addon1">
                        <i class="bi bi-geo-fill"></i>
                    </div>
                </div>

                <input type="text" id="endLocation" class="form-control border-top-0 border-start-0 border-end-0 border-bottom-1" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
    </div>
    <div class="col-2 d-flex justify-content-center text-center align-items-center ">
        <button type="button" id="location-trans" class="btn bg-transparent border-1 border-dark border-radius-100">
            <i class="bi bi-arrow-down-up fs-2 text-dark"></i>
        </button>
    </div>
    <div class="col-9">
        <div class="my-4">
            <h4 style="margin-left:35px" class="text-primary">Tarih</h4>
            <div class="input-group mb-3 bg-transparent border-0  ">
                <div class="input-group-prepend border-0">
                    <div class="input-group-text bg-transparent border-0 " id="basic-addon1">
                        <i class="bi bi-geo"></i>
                    </div>
                </div>
                <input type="date" id="date" class="form-control border-top-0 border-start-0 border-end-0 border-bottom-1">
            </div>
        </div>

    </div>
    <div class="col-3 d-flex flex-column py-5 justify-content-center text-center align-items-center ">

        <div class="mb-4">
            <button type="button" class="btn btn-primary active btn-block" aria-pressed="true" onclick="SetToday()">
                <span>Bugün</span>
            </button>
        </div>
        <div>
            <button type="button" class="btn btn-primary btn-block" onclick="SetTomorrow()">
                <span>Yarın</span>
            </button>
        </div>


    </div>
    <div class="col-12 text-center px-5">
      <button class="btn btn-primary fs-3 w-100">
          <span>Bileti Bul</span>
      </button>
    </div>
</div>


